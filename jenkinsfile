pipeline {
    agent any

   
    

    stages {
	    
	    
        stage('Pull GIT') {
            steps {
                echo 'Pulling...';
                  git branch: 'main',
                  url : 'https://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@github.com/skanderz/Projet_DevOps.git'
            }
        }
        
	    
	    
        stage('Maven Package') {
            steps {
                sh "chmod +x mvnw "
                sh "./mvnw package"
            }
        }

	    
	    
  stage('Test JUnit') {
            steps {
                sh "./mvnw test"  
                junit '*/target/surefire-reports/TEST-.xml'
            }  
        }
        
        
           
        
        stage('SonarQube') {
            steps {
              withSonarQubeEnv (installationName:'sonar'){
              sh "./mvnw sonar:sonar -Dsonar.projectKey=Skander -Dsonar.host.url=http://localhost:9000 -Dsonar.login=0a35b994609ce1ae22b52600b890be31a6af180a"    
                                                         }
                  }   					 
                           }
				    
				    
		
		
		
    }   

}
